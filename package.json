{
  "name": "binder-editor",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=development webpack-dev-server --progress",
    "fix": "npm run prettier -- --write",
    "prettier": "prettier \"**/*.{js,css,scss,json,md,ts,tsx,html,yml}\" --ignore-path=.eslintignore",
    "test": "npm run test:app",
    "test:code": "npm run prettier -- --list-different"
  },
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelovicentegc/binder-editor.git"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  },
  "dependencies": {
    "browser-nativefs": "0.2.0",
    "i18next-browser-languagedetector": "4.0.1",
    "nanoid": "2.1.10",
    "roughjs": "4.0.4"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "@types/jest": "25.1.0",
    "@types/nanoid": "2.1.0",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.3",
    "node-sass": "4.13.1",
    "prettier": "1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rewire": "4.0.1",
    "rimraf": "^3.0.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "eslintConfig": {
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ]
    }
  }
}
